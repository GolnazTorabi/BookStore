<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:background="@drawable/list_item_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_4"
        android:elevation="1dp">

        <com.book.store.stock.bookstore.base_ui.CustomTextViewBold
            android:textColor="@color/colorAccent"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_4"
            android:text="بادبادک باز"
            android:textSize="@dimen/text_size_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.book.store.stock.bookstore.base_ui.CustomTextView
            android:textColor="@color/colorAccent"
            android:id="@+id/translator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_4"
            android:text="بادبادک باز"
            android:textSize="@dimen/text_size_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <com.book.store.stock.bookstore.base_ui.CustomTextViewBold
            android:textColor="@color/colorAccent"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_4"
            android:text="292,293"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translator_name" />

        <com.book.store.stock.bookstore.base_ui.CustomTextView
            android:textColor="@color/colorAccent"
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_2"
            android:text="34"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translator_name" />

        <com.book.store.stock.bookstore.base_ui.CustomTextView
            android:textColor="@color/colorAccent"
            android:id="@+id/publish_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_4"
            android:text="1398"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stock" />

        <com.book.store.stock.bookstore.base_ui.CustomTextView
            android:textColor="@color/colorAccent"
            android:id="@+id/published_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_2"
            android:text="13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stock" />

        <com.book.store.stock.bookstore.base_ui.CustomTextView
            android:textColor="@color/colorAccent"
            android:id="@+id/publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginEnd="@dimen/margin_4"
            android:text="بنشر قلم"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_3"
            app:layout_constraintTop_toBottomOf="@id/publish_year" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>