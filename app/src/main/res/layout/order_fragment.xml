<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".pages.order.OrderFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.book.store.stock.bookstore.base_ui.CustomEditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                app:layout_constraintLeft_toRightOf="@id/search"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/search"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:padding="@dimen/margin_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_search_24"
                tools:ignore="VectorDrawableCompat" />

            <com.book.store.stock.bookstore.base_ui.CustomTextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_4"
                android:gravity="right"
                android:text="@string/address"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search" />

            <com.book.store.stock.bookstore.base_ui.CustomTextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_4"
                android:gravity="right"
                android:text="@string/phone"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address" />

            <com.book.store.stock.bookstore.base_ui.CustomTextView
                android:id="@+id/fax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginEnd="@dimen/margin_4"
                android:gravity="right"
                android:text="@string/fax"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/seller"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right"
                android:padding="@dimen/margin_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                tools:ignore="VectorDrawableCompat" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_5"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toTopOf="@id/button_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back"
                app:layout_goneMarginTop="@dimen/margin_5" />

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.book.store.stock.bookstore.base_ui.CustomButton
                    android:visibility="gone"
                    android:id="@+id/submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_2"
                    android:layout_weight="1"
                    android:background="@drawable/button_default"
                    android:text="ثبت"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_3" />

                <com.book.store.stock.bookstore.base_ui.CustomButton
                    android:id="@+id/new_book"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_2"
                    android:layout_weight="1"
                    android:background="@drawable/without_back_button"
                    android:text=" کتاب جدید"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_3" />

                <com.book.store.stock.bookstore.base_ui.CustomButton
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_10"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/without_back_button"
                    android:text=" انصراف"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_3" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>